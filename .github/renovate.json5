{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'default:pinDigestsDisabled',
  ],
  configMigration: true,
  prHourlyLimit: 1,
  prConcurrentLimit: 3,
  includePaths: [
    'docs/**',
    '.github/',
    'release/**',
    'earthfile2llb/**',
    'ast/tests/**',
  ],
  dockerfile: {
    fileMatch: [
      'Earthfile',
      '\\.earth$',
    ],
  },
  enabledManagers: [
    'regex',
    'github-actions',
    'dockerfile',
  ],
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        '.+.md',
      ],
      matchStrings: [
        'earthly/releases/download/(?<currentValue>.+?)/',
        '- uses: earthly/actions/setup-earthly@.*?[\\s\\n]+.*?[\\s\\n]+with:[\\s\\n]*version: (?<currentValue>.+?)[\\s\\n/]+',
        "'earthly/earthly:(?<currentValue>.+?)'",
        'github.com/earthly/earthly:(?<currentValue>.+?)(\\+|`)',
        '(:|\\s+)earthly/earthly:(?<currentValue>.+?)[\\s\\n/]+',
        'the `latest` tag is `(?<currentValue>.+?)`',
        'earthly/compare/(?<currentValue>.+?)\\.\\.\\.main',
      ],
      depNameTemplate: 'earthly/earthly',
      datasourceTemplate: 'github-releases',
    },
    {
      customType: 'regex',
      fileMatch: [
        'earthfile2llb/with_docker_run_base.go',
        'tests/with-docker/Earthfile',
        'ast/tests/with-docker.ast.json'
      ],
      matchStrings: [
        '"(--DIND_IMG=)?earthly/dind:(?<currentValue>.+?)"',
        '--DIND_IMG=earthly/dind:(?<currentValue>.+?)[\\s\\n/]+',
        '`(FROM )?earthly/dind:(?<currentValue>.+?)`',
        'FROM earthly/dind:(?<currentValue>.+?)[\\s\\n/]+',
        'earthly/dind:(?<currentValue>.+?) (\\||@)',
      ],
      depNameTemplate: "earthly/dind",
      datasourceTemplate: 'docker'
    }
  ],
  labels: [
    'renovate',
  ],
  packageRules: [
    {
      matchPackageNames: [
        'earthly/earthly',
      ],
      matchDatasources: [
        'github-releases',
      ],
      addLabels: [
        'earthly-version-in-docs',
      ],
    },
    {
      matchPackageNames: [
        '*',
      ],
      matchDatasources: [
        'docker',
      ],
      excludePackageNames: [
        'earthly/dind'
      ],
      enabled: false,
      addLabels: [
        '{{depName}}',
      ]
    }
  ],
}
